@model Cadastro.WebApp.Models.Cliente

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdGuid)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdGuid)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        @foreach (var item in Model.Logradouros)
        {
            <dt class="col-sm-2">
                Endereço
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.LogradouroNome)
            </dd>


        }
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.IdGuid }) |
    <a asp-action="Index">Voltar</a>
</div>
