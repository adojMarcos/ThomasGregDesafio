@model IEnumerable<Cadastro.WebApp.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Cliente</h1>

<p>
    @Html.ActionLink("Novo Cliente", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdGuid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdGuid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new {  id=item.IdGuid  }) |
                    @Html.ActionLink("Detalhes", "Details", new {  id=item.IdGuid  }) |
                    @Html.ActionLink("Apagar", "Delete", new {  id=item.IdGuid  })
            </td>
        </tr>
}
    </tbody>
</table>
